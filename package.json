{
  "name": "snail-situation",
  "version": "0.0.0",
  "description": "website",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"ecstatic public\" \"npm run sass-watch\"",
    "copy": "mkdir -p public && cp src/index.html public && mkdir -p public/img && cp src/img/* public/img && mkdir -p public/admin && cp src/admin/* public/admin",
    "build": "npm run copy && npm run sass",
    "sass": "sass ./src/style/style.scss ./public/style.css",
    "sass-watch": "sass --watch src/style:public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snail-situation/snail-situation.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/snail-situation/snail-situation/issues"
  },
  "homepage": "https://github.com/snail-situation/snail-situation#readme",
  "devDependencies": {
    "concurrently": "^6.2.0",
    "ecstatic": "^4.1.4",
    "sass": "^1.32.8"
  }
}
